{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/rollercoaster-dev/openbadges-types/main/schemas/ob3-schema.json",
  "title": "Open Badges 3.0 Verifiable Credential JSON Schema",
  "description": "Combined W3C Verifiable Credential schema with Open Badges 3.0 extensions",
  "definitions": {
    "CredentialSchema": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "JsonSchemaValidator2019" }
      },
      "required": ["id", "type"],
      "additionalProperties": false
    },
    "Evidence": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      },
      "required": ["type"],
      "additionalProperties": true
    },
    "TermsOfUse": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      },
      "required": ["type"],
      "additionalProperties": true
    }
  },
  "allOf": [
    { "$ref": "https://www.w3.org/2022/credentials/v2/verifiable-credential-schema.json" },
    {
      "type": "object",
      "properties": {
        "credentialSchema": { "$ref": "#/definitions/CredentialSchema" },
        "evidence": {
          "oneOf": [
            { "$ref": "#/definitions/Evidence" },
            { "type": "array", "items": { "$ref": "#/definitions/Evidence" } }
          ]
        },
        "termsOfUse": {
          "oneOf": [
            { "$ref": "#/definitions/TermsOfUse" },
            { "type": "array", "items": { "$ref": "#/definitions/TermsOfUse" } }
          ]
        }
      },
      "additionalProperties": true
    }
  ]
}
